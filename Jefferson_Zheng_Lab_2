#include <iostream>
#include <string>
using namespace std;

int main() {
    string cerealName;
    double servingCalories, servingOunces, totalCalories;
    cout << "Cereal Name: ";
    cin >> cerealName;
    cout << "# of Calories per Serving: ";
    cin >> servingCalories;
    cout << "# of Ounces per Serving: ";
    cin >> servingOunces;
    cout << "One serving of \"" << cerealName << "\" is " << servingCalories << " ounces and has " << servingCalories / servingOunces << " calories per ounce." << endl;
    cout << "How many calories of cereal is the user willing to eat today? ";
    cin >> totalCalories;
    cout << "You can eat ~" << (totalCalories / (servingCalories / servingOunces)/1.0) << " ounces of \"" << cerealName << "\"!"<< endl;
    return 0;
}

